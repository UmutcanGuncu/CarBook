@model CreateCarWithPricesViewModel
<div class="page-content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-xl-12">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">Araba Ekle</h4>
                    </div>
                </div>
                <div class="card">
                    <div class="card-body">
                        <form method="post" enctype="multipart/form-data">
                            <div class="form-group">
                                <label>Marka</label>
                                <select asp-for="BrandId" class="form-control"
                                        asp-items="ViewBag.BrandData"
                                        id="BrandId"></select>
                            </div>
                            <div class="form-group">
                                <label>Model</label>
                                <input class="form-control" asp-for="CarModel" />
                            </div>
                            <div class="form-group">
                                <label>Km</label>
                                <input class="form-control" asp-for="Km" />
                            </div>
                            <div class="form-group">
                                <label>Vites Türü</label>
                                <input class="form-control" asp-for="Transmission" />
                            </div>
                            <div class="form-group">
                                <label>Koltuk Sayısı</label>
                                <input class="form-control" asp-for="Seat" />
                            </div>
                            <div class="form-group">
                                <label>Bagaj Kapasitesi</label>
                                <input class="form-control" asp-for="Luggage" />
                            </div>
                            <div class="form-group">
                                <label>Yakıt Türü</label>
                                <input class="form-control" asp-for="Fuel" />
                            </div>
                            <div class="form-group">
                                <label>Saatlik Kiralama Bedeli ₺</label>
                                <input class="form-control" asp-for="AmountHour" />
                            </div>
                            <div class="form-group">
                                <label>Günlük Kiralama Bedeli ₺</label>
                                <input class="form-control" asp-for="AmountDay" />
                            </div>
                            <div class="form-group">
                                <label>Haftalık Kiralama Bedeli ₺</label>
                                <input class="form-control" asp-for="AmountWeek" />
                            </div>
                            <div class="form-group">
                                <label>Kapak Fotoğrafı</label>
                                <input class="form-control" asp-for="CoverImage" />
                            </div>
                            <div class="form-group">
                                <label>Büyük Resim</label>
                                <input class="form-control" asp-for="BigImage" />
                            </div>
                            <button href="/Admin/AdminCar/CreateCar"class="btn btn-outline-success">Araba Ekle</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>