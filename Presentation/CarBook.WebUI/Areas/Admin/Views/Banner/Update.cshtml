@model UpdateBannerDto
<div class="page-content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-xl-12">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">Araba Güncelle</h4>
                    </div>
                </div>
                <div class="card">
                    <div class="card-body">
                        <form method="post" enctype="multipart/form-data">
                            <input type="hidden" asp-for="id" />
                            <div class="form-group">
                                <label>Başlık</label>
                                <input class="form-control" asp-for="title" />
                            </div>
                            <div class="form-group">
                                <label>Açıklama</label>
                                <input class="form-control" asp-for="description" />
                            </div>
                            <div class="form-group">
                                <label>Video Url</label>
                                <input class="form-control" asp-for="videoUrl" />
                            </div>
                            <div class="form-group">
                                <label>Video Açıklama</label>
                                <input class="form-control" asp-for="videoDescription" />
                            </div>
                            <button href="/Admin/Banner/Update" class="btn btn-outline-success">Marka Güncelle</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>